<div class="blogs-link-table" id="blogs-link-table">hello</div>

<style>
    .blogs-link-table {
        padding: 0px 10px;
        z-index: 5;
        background-color: var(--dark-bg);
        position: fixed !important;
        top: 0px;
        right: -100vw;
        width: 280px;
        height: 100vh;
        overflow-y: scroll;
        transition: top 0.3s ease; /* Smooth transition for top */
        transition: right 0.3s ease; /* Smooth transition for top */
    }
    @media screen and (min-width: 1280px) {
        .blogs-link-table h3 {
            padding-top: 10px;
            background-color: var(--main-bg);
        }
        .blogs-link-table {
            top: 0px; /* Always 0px for smaller screens */
            right: calc(50vw + 360px);
            padding: 0px 20px;
            /* background-color: var(--main-bg); */
        }
    }
</style>

<script is:inline>
    document.addEventListener("scroll", () => {
        const toc = document.querySelector("#blogs-link-table");

        if (window.innerWidth > 1300) {
            // Animation effect for large screens (1200px+)
            if (window.scrollY > 50) {
                toc.style.top = "0px"; // Scroll down to top: 0px
            } else {
                toc.style.top = "100px"; // Scroll back to top: 100px
            }
        } else {
            // No animation for smaller screens (less than 1200px)
            toc.style.top = "0px";
        }
    });
</script>
