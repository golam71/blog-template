<style>
    .round-button {
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--dark-bg);
        color: var(--text);
        border-radius: 100%;
        height: 40px;
        width: 40px;
        border: 3px solid var(--text);
        font-size: 22px;
    }
    .round-button:nth-of-type(odd) {
        margin: 0px 10px;
    }
    .round-button:hover {
        transform: scale(1.2);
        transition: transform 0.1 ease;
        /* border: 3px solid var(--heading); */
        /* color: var(--accent); */
    }
    .round-button:active {
        color: var(--accent);
        border: 3px solid var(--accent);
    }
    .round-btn-container {
        z-index: 10;
        display: inline-flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 15px;
        padding: 10px 0px;
        border-radius: 40px;
        background-color: var(--dark-bg);
        position: fixed;
        bottom: 10px;
        right: 10px;
    }

    /* .visibility {
        opacity: 0.2;
    } */
    /* 
    .round-btn-container:hover,
    .round-btn-container:active,
    .round-btn-container:focus {
        opacity: 100;
    } */

    /* classes for js */
    .active-state {
        color: var(--accent);
        border: 3px solid var(--accent);
    }
    /* button hide */
    .rotate {
        transform: rotate(90deg);
    }
    .hidden {
        display: none;
    }
</style>

<script is:inline>
    let middle, left, right, container;

    document.addEventListener("DOMContentLoaded", () => {
        middle = document.getElementById("middle-button");
        left = document.getElementById("left-button");
        right = document.getElementById("right-button");
        container = document.getElementById("round-btn-container");

        const buttons = document.querySelectorAll(".round-button");

        buttons.forEach((button) => {
            button.addEventListener("click", () => {
                button.classList.toggle("active-state");
            });
        });

        middle.addEventListener("click", () => {
            middle.classList.toggle("rotate");
            left.classList.toggle("hidden");
            right.classList.toggle("hidden");

            // container.classList.toggle("visibility");
        });
        left.addEventListener("click", () => {
            let contents = document.getElementById("table-of-contents");
            console.log("left");
            if (screen.width < 1280) {
                contents.classList.toggle("show-table-of-contents");
            } else {
                contents.classList.toggle("hidden");
            }
        });
    });
</script>
